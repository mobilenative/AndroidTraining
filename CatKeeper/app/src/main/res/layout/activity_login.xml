<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tw.training.catkeeper.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ui_size_70"
        android:paddingTop="@dimen/ui_size_90">

        <ImageView
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@mipmap/logo"
            android:contentDescription="@string/text_logo_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_logo_title"
            android:textColor="@color/color_dark_orange"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/input_username"
            android:layout_width="@dimen/ui_size_246"
            android:layout_height="@dimen/ui_size_36"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_input_bg"
            android:hint="@string/input_hint_username"
            android:paddingEnd="@dimen/ui_size_10"
            android:paddingStart="@dimen/ui_size_10"
            android:singleLine="true"
            android:textColor="@color/colorBlueGreen"
            android:textColorHint="@color/colorBlueGreenTranslucent"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/input_pwd"
            android:layout_width="@dimen/ui_size_246"
            android:layout_height="@dimen/ui_size_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ui_size_30"
            android:background="@drawable/login_input_bg"
            android:hint="@string/input_hint_password"
            android:paddingEnd="@dimen/ui_size_10"
            android:paddingStart="@dimen/ui_size_10"
            android:singleLine="true"
            android:textColor="@color/colorBlueGreen"
            android:textColorHint="@color/colorBlueGreenTranslucent"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/ui_size_246"
            android:layout_height="@dimen/ui_size_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ui_size_25"
            android:background="@drawable/login_btn_bg_selector"
            android:text="@string/text_btn_login"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>
